<div class="container">
      <a href="#" onclick="generateOrder()" class="btn btn-success">Realizar Compra</a>
    <h1 class="text-center">Productos</h1>
    <div class="row text-center">
        {{#each payload}}
        <div class="col my-3">
            <div class="card mx-auto" style="width: 18rem;">
                  <a href="#" onclick="addToCart('{{_id}}', '{{../cart}}')" class="btn btn-primary">Comprar</a>
         <a href="#" onclick="deleteProduct('{{_id}}','{{../cart}}')" class="btn btn-danger">Eliminar</a>
                <img src={{this.thumbnails}} class="card-img-top" alt={{this.id}}>
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">${{this.price}} </h6>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text text-secondary">{{this.category}}</p>
                    <a href="#" onclick="addToCart('{{_id}}',{{../user}})"  class="btn btn-primary" >Comprar</a>
                    <a href="#" class="btn btn-danger">Eliminar</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

<div class="row text-center"> 
    {{#if hasPrevPage}}
        <a class="btn btn-primary my-3" href={{this.prevLink}}><< Pagina Anterior</a>
    {{/if}}
    <p class="text-center "> Pagina actual  :  {{this.page}}</p>
      

         {{#if hasNextPage}}
        <a class="btn btn-primary " href={{this.nextLink}}> Pagina Siguiente  >></a>
    {{/if}} 
    </div>
</div>

